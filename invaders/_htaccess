#htaccess root

Options +FollowSymlinks
RewriteEngine on

RewriteCond %{HTTP_HOST} ^y-europe.org.tld$
RewriteRule ^(.*) https://ssl5.ovh.net/~yeuropeorv/$1 [QSA,L,R=301]

RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.y-europe.org/$1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]


